<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/rootContainer"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvAppTitle"
            android:text="@string/title_meteo_citation"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Barre de recherche de ville -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <EditText
                android:id="@+id/etCitySearch"
                android:hint="Rechercher une ville"
                android:inputType="textCapWords"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/btnAddCity"
                android:text="Ajouter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <Spinner
            android:id="@+id/spinnerCities"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp" />
        <Button
            android:id="@+id/btnLocate"
            android:text="ðŸ“ Ma position"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />
        <TextView
            android:id="@+id/tvUpdated"
            android:visibility="gone"
            android:text=""
            android:textSize="12sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp" />
        <!-- ===== Bloc mÃ©tÃ©o remodelÃ© ===== -->
        <LinearLayout
            android:id="@+id/weatherBlock"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp">

            <!-- Colonne gauche : IcÃ´ne + condition -->
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <!-- IcÃ´ne mÃ©tÃ©o -->
                <ImageView
                    android:id="@+id/ivIcon"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:contentDescription="@string/app_name"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:id="@+id/tvCondition"
                    android:text="â€”"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <!-- TempÃ©rature Ã  droite -->
            <TextView
                android:id="@+id/tvTemp"
                android:text="â€” Â°C"
                android:textSize="48sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <!-- Indice UV -->
        <TextView
            android:id="@+id/tvUv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:text="UV â€”"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_uv_chip"
            android:layout_marginTop="16dp"
            />
        <!-- Qualite de l'air -->
        <TextView
            android:id="@+id/tvAqi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:text="AQI â€”"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_uv_chip" />

        <!-- ===== PrÃ©visions : Aujourd'hui + 24 h ===== -->
        <TextView
            android:id="@+id/tvHourlyTitle"
            android:text="Aujourd'hui + 24 h"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/containerHourly"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp" />
        </HorizontalScrollView>

        <!-- ===== PrÃ©visions : 7 jours ===== -->
        <TextView
            android:id="@+id/tvDailyTitle"
            android:text="7 jours"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp" />

        <LinearLayout
            android:id="@+id/containerDaily"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/tvQuoteTitle"
            android:text="Citation du jour"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/tvQuote"
            android:text="â€”"
            android:textSize="20sp"
            android:textStyle="italic"
            android:lineSpacingExtra="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/btnNewQuote"
            android:text="Nouvelle citation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"/>
        <Button
            android:id="@+id/btnFeedback"
            android:text="Envoyer un retour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"/>


    </LinearLayout>
</ScrollView>
